import sqlite3
import os

# Specify the path to the SQLite database file
db_path = 'Final.db'  # Replace 'example.db' with the path to your database file

# Step 1: Connect to the SQLite database
try:
    conn = sqlite3.connect(db_path)
    print(f"Connected to the database '{db_path}'.")

    # Step 2: Close the connection
    conn.close()
    print(f"Connection to the database '{db_path}' has been closed.")

    # Step 3: Delete the database file
    if os.path.exists(db_path):
        os.remove(db_path)
        print(f"Database file '{db_path}' has been deleted.")
    else:
        print(f"Database file '{db_path}' does not exist.")

except sqlite3.Error as e:
    print(f"Error while connecting to the database: {e}")